<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:layout_marginTop="10dp"
      android:padding="3dp"
      android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_village_icon"
        android:src="@mipmap/default_img"
        android:layout_centerVertical="true"
        android:layout_width="65dp"
        android:layout_height="65dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="乡吧名"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_village_icon"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/iv_village_icon"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:text="描述"
        android:textColor="@color/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btn_replace"
        android:layout_marginRight="20dp"
        />


    <TextView
        android:id="@+id/tv_address"
        android:text="地址"
        android:textColor="@color/text0"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_alignLeft="@+id/tv_desc"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_attentionNum"
        android:text="关注人数：0"
        android:textColor="@color/text0"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@id/tv_address"
        android:layout_below="@id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_postNum"
        android:text="帖子数：0"
        android:textColor="@color/text0"
        android:textSize="14sp"
        android:layout_alignTop="@id/tv_attentionNum"
        android:layout_toRightOf="@id/tv_attentionNum"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_replace"
        android:text="切换"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg_corner_blue"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>