<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black_light"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                tools:text="标题标题标题标题标题标题标题"/>

            <com.lqm.home.widget.RoundRectImageView
                android:id="@+id/iv_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_my"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#88333333"
                android:textSize="12sp"
                tools:text="2015-07-06 16:30:00"/>

            <TextView
                android:id="@+id/tv_article_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#88333333"
                android:textSize="12sp"
                tools:text="新华网"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>